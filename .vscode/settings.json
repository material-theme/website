{
  "eslint.alwaysShowStatus": true,
  "javascript.validate.enable": false,
  "eslint.enable": true,
  "stylelint.enable": true,
  "css.validate": false,
  "scss.validate": false,
  "files.associations": {
    "*.css": "postcss",
    ".stylelintrc": "json",
    "yarn.lock": "yaml",
    ".eslintrc": "json"
  },
  "stylelint.autoFixOnSave": true,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
